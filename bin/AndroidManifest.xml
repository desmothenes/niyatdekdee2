<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niyatdekdee.notfy"
    android:versionCode="1"
    android:versionName="1.11" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/customTitlebar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:multiprocess="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InsertForm" >
        </activity>
        <activity android:name=".EditForm" >
        </activity>
        <activity android:name=".add_web" >
        </activity>

        <receiver android:name=".AutoStart" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                </action>
            </intent-filter>
        </receiver>
        <receiver android:name=".Alarm" >
        </receiver>

        <service android:name=".NiyayService" >
        </service>

        <activity
            android:name=".Setting"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name=".Fav_add"
            android:label="@string/title_activity_fav_add" >
        </activity>
        <activity
            android:name=".Find"
            android:label="@string/title_activity_find" >
        </activity>
        <activity
            android:name=".SearchGroupActivity"
            android:label="@string/title_activity_seaech" >
        </activity>
        <activity
            android:name=".SearchNameActivity"
            android:label="@string/title_activity_search_name" >
        </activity>
        <activity
            android:name=".DekdeeBrowserActivity"
            android:label="@string/title_activity_dekdee_browser" >
        </activity>
        <activity
            android:name=".ChapterListActivity"
            android:label="@string/title_activity_chapter_list" >
        </activity>
    </application>

</manifest>