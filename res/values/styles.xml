<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="AppThemeNoTitleBar" parent="android:Theme.Light.NoTitleBar" />

    <style name="bgTitlebar">

        <!-- เรียกใช้พื้นหลังจาก res/drawable/bg_titlebar.xml เพื่อทำการไล่สี -->
        <item name="android:background">@drawable/bg_titlebar</item>
    </style>

    <style name="bgList">

        <!-- เรียกใช้พื้นหลังจาก res/drawable/bg_titlebar.xml เพื่อทำการไล่สี -->
        <item name="android:background">@drawable/list_selector</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>